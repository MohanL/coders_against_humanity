extends layout

block content

	h1.page-title Join a room

	.container
		form(action="/join_room", method="post")
			.form-group
				input.form-control(type="text", placeholder="room id", name="room")
			.form-group
				input.form-control(type="text", placeholder="team code", name="code")
			.form-group
				input.form-control(type="text", placeholder="team name", name="team")

			.form-group.text-center
				button.btn.btn-primary.btn-lg(type="submit") Join Room!
